{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello Admin{% endblock %}

 {% block body %}

<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Email campaign chart -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">statistics of reservations</h4>
                    <div class="sales ct-charts mt-3"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title m-b-5">number of reservations</h5>
                    <h3 class="font-light">{{ someReservations }}</h3>
                    <div class="m-t-20 text-center">
                        <div id="earnings"></div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title m-b-0">Users</h4>
                    <h2 class="font-light">{{ someUsers }} <span class="font-16 text-success font-medium">+23%</span></h2>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Email campaign chart -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Ravenue - page-view-bounce rate -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- column -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">reservations</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th class="border-top-0">NAME</th>
                            <th class="border-top-0">NBR PERSONES</th>
                            <th class="border-top-0">DATE</th>
                            <th class="border-top-0">ACTION</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for reservation in reservations %}

                        <tr>

                            <td class="txt-oflo">{{ reservation.user.getLastName }}</td>
                            <td><span class="label label-success label-rounded">{{ reservation.nbUser }}</span> </td>
                            <td class="txt-oflo">{{ reservation.createdAt|date('d-m-Y') }}</td>
                            <td><span class="font-medium"> <a href="{{ path('reservation_show', {id: reservation.id}) }}">SHOW</a></span></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- Recent comment and chats -->
    <!-- ============================================================== -->
</div>

    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->

{% endblock %}
