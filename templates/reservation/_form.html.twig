{% include 'baseUser.html.twig' %}
<div class="container">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bg-image" style="background-image: url(../../public/images/reservation_1.jpg);"></div>
                    </div>
                    <div class="col-lg-12 p-5">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 form-group">
                                {{ form_row(form.nbUser, {'label': 'How Many People', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 form-group">
                                {{ form_row(form.resAt, {'label': 'Date', 'attr': {'class': 'form-control' , 'id': 'm_date'}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                {{ form_row(form.message, {'label': 'Message', 'attr': {'class': 'form-control' , 'id': 'm_message', 'rows': '6'}}) }}
                            </div>
                        </div>
                        {{ form_widget(form) }}

                        <div class="row">
                            <div class="col-md-12 form-group">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Reserve Now">
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
</div>
